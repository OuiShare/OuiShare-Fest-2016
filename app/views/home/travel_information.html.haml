          %a{href: "http://www.covoiturage-libre.fr", target: "_blank"} 
            Covoiturage libre.

      .row.travel_information
        %h4
          = t('dynamic_translations.travel_information.carsharing.title')
        %p.text-center
          = t('dynamic_translations.travel_information.carsharing.part_one')
          %a{href: "https://www.drivy.com/", target: "_blank"} 
            Drivy
          \.
          = t('dynamic_translations.travel_information.carsharing.part_two')
          \:
          %a{href: "http://www.ouicar.fr", target: "_blank"}
            OuiCar,
          %a{href: "https://www.liftshare.com/uk/", target: "_blank"}
            Liftshare,
          %a{href: "http://www.deways.com", target: "_blank"}
            Deways,
          %a{href: "http://www.tamyca.de", target: "_blank"}
            Tamyca,
          %a{href: "http://www.snappcar.com", target: "_blank"}
            Snappcar,
          %a{href: "http://www.autonetzer.de", target: "_blank"}
            Autonetzer,
          %a{href: "https://minbildinbil.dk", target: "_blank"}
            Minbildinbil
          \.


      .row.travel_information
        %h4
          = t('dynamic_translations.travel_information.train.title')
        %p.text-center
          = t('dynamic_translations.travel_information.train.part_one')
          %a{href: "#"} 
            = t('dynamic_translations.travel_information.train.link')
          = t('dynamic_translations.travel_information.train.part_two')
          %br
          = t('dynamic_translations.travel_information.train.part_three')

      .row.travel_information
        %h4
          = t('dynamic_translations.travel_information.coaches.title')
        %p.text-center
          = t('dynamic_translations.travel_information.coaches.part_one')
          %a{href: "http://uk.megabus.com/Default.aspx", target: "_blank"}
            Megabus,
          %a{href: "http://www.eurolines.com/en/", target: "_blank"}
            Eurolines 
          and 
          %a{href: "http://fr.idbus.com/fr", target: "_blank"}
            iDBUS 
          = t('dynamic_translations.travel_information.coaches.part_two')
      .row.travel_information
        %h4
          = t('dynamic_translations.travel_information.fly.title')
        %p.text-center
          = t('dynamic_translations.travel_information.fly.part_one')

