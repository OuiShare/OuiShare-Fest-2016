.blank_bg.page.top_blue
  .container
    .row.centered.travel_information
      %h3.ouishare_stencil
        = t('dynamic_translations.travel_information.title')
      %hr.pink

    .col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
      .row.travel_information
        %h4
          = t('dynamic_translations.travel_information.ridesharing.title')
