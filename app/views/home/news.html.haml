.blank_bg.page.news
  .container
    .row.centered
      %h3.ouishare_stencil
        = t('dynamic_translations.ouishare-news.title')
      %hr.pink
    .row{style:"padding-top: 3%"}
      - @magazines.each do |f|
        .col-md-4{style:"position: relative; min-height:370px;"}
          - if !f.content.split('img')[1].nil?
            .col-md-12
              %a{href: "#{f.url}", target:"blank"}
                %img{:src => "#{f.content.split(' ')[3].split('"')[1].gsub(/-150x150/, "")}", :u => "image"}
            .col-md-12
              %br
              %p
                %a{href: "#{f.url}", target:"blank"}
                  = f.name
                %br
                  = "by #{f.author}"
          - else
            .col-md-12
              %a{href: "#{f.url}", target:"blank"}
                = image_tag "/assets/landing_logo.png", :style => "height:150px;"
            .col-md-12
              %br
              %p
                %a{href: "#{f.url}", target:"blank"}
                  = f.name
                %br
                  = "by #{f.author}"
    .row.centered{:style => "margin-bottom:100px;"}
      .col-md-12
        .col-md-6.col-md-offset-3
          %a{href: "http://magazine.ouishare.net/tag/ouisharefest/", :target => "_blank", :style => "width: 170px;"}
            %button.btn.btn-large.btn-primary
              = t('dynamic_translations.news.see_all')
