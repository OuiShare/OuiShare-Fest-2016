                    =t('dynamic_translations.get_involved.submit')
            .col-md-4.pricing-table.turquoise.bordered.plain
              %ul.centered.alt
                %li.title
                  =t('dynamic_translations.get_involved.join_the_team') 
                %li
                  = t('dynamic_translations.get_involved.option_2')
                %li.button
                  %a.btn.btn-large.button-call-to-action-option{href: "https://docs.google.com/forms/d/15QpVEkvXR9-DpAKLYoUSPOXrfnYRG9aCPnMoK3WUrJo/edit", :target => "_blank"}
                    = t('dynamic_translations.get_involved.join')
            .col-md-4.pricing-table.turquoise.bordered.plain
              %ul.centered.alt
                %li.title
                  =t('dynamic_translations.get_involved.idea_wall') 
                %li
                  = t('dynamic_translations.get_involved.idea_wall_text')
                %li.button
                  %a.btn.btn-large.button-call-to-action-option{href: "https://docs.google.com/forms/d/15QpVEkvXR9-DpAKLYoUSPOXrfnYRG9aCPnMoK3WUrJo/edit", :target => "_blank"}
                    = t('dynamic_translations.get_involved.idea_wall_button')
      
#tickets.triangle_bg
  .container.tickets-section  
    .row.centered
      %br
      %h3#anc_tickets 
        = t('dynamic_translations.tickets.title')
      %br      
      %br
      .container          
        %h4{:style => "font-size:18px;"}
          = t('dynamic_translations.tickets.description')
          %a{href: "#"} 
            = t('dynamic_translations.tickets.apply_tickets_link')
        %br
        %h4{:style => "font-size:18px;"}
          = t('dynamic_translations.tickets.sponsored_tickets')
      %br
      %div{:style => "width:100%; text-align:left;"}
        %iframe{:allowtransparency => "true", :frameborder => "0", :height => "600", :hspace => "0", :marginheight => "5", :marginwidth => "5", :scrolling => "auto", :src => "http://www.eventbrite.com/tickets-external?eid=10108670305&ref=etckt&v=2", :vspace => "0", :width => "100%"}
        %div{:style => "font-family:Helvetica, Arial; font-size:10px; padding:5px 0 5px; margin:2px; width:100%; text-align:left;"}
          %a{:href => "http://www.eventbrite.com/r/etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} 
            =t('dynamic_translations.tickets.event_registration_online')
          %span{:style => "color:#ddd;"} 
            =t('dynamic_translations.tickets.for')
          %a{:href => "https://www.eventbrite.es/e/ouishare-fest-2014-tickets-10108670305?ref=etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} OuiShare Fest 2014
          %span{:style => "color:#ddd;"} 
            =t('dynamic_translations.tickets.powered_by')
          %a{:href => "http://www.eventbrite.com?ref=etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} Eventbrite

      
      - if @ouishare_fest_attendees && !@ouishare_fest_attendees["attendees"].blank?
        %h4.who-s-coming-title
          = t('dynamic_translations.tickets.who_s_coming') 
        %ul.unstyled.attendees-list
          -@ouishare_fest_attendees["attendees"].first(ENV["EVENTBRITE_ATTENDEES_DISPLAY_NUMBER"].to_i).each do |attendee|
            .col-lg-2
              %li.attendee-items
                =image_tag display_gravatar(attendee["attendee"]["email"]), :class => 'img-circle'
                .row{:style => "color:white;"}                  
                  = attendee["attendee"]["first_name"]
                  = attendee["attendee"]["last_name"][0]+'.'
              
          - if @ouishare_fest_attendees["attendees"].count > ENV["EVENTBRITE_ATTENDEES_DISPLAY_NUMBER"].to_i  
            %div
              #allattendees{style: "display: none;"} 
                -@ouishare_fest_attendees["attendees"].last(@ouishare_fest_attendees["attendees"].count - ENV["EVENTBRITE_ATTENDEES_DISPLAY_NUMBER"].to_i).each do |attendee|
                        
                  .col-lg-2
                    %li.attendee-items
                      =image_tag display_gravatar(attendee["attendee"]["email"]), :class => 'img-circle'
                      .row{:style => "color:white;"}                     
                        = attendee["attendee"]["first_name"]
                        = attendee["attendee"]["last_name"][0]+'.'
                    
              %br   
              %div.row
                %a.individuals-list-btn#btn_attendees_down
                  %button.btn.btn-embossed.btn-primary 
                    = t('dynamic_translations.tickets.show_all_attendees')
              %div.row 
                %a.individuals-list-btn.hide#btn_attendees_up        
                  %button.btn.btn-embossed.btn-primary
                    = t('dynamic_translations.tickets.hide_all_attendees')
     
