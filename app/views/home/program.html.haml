.triangle_bg_3.white_txt.vspace
  .container
    .row.centered
      .col-md-10.col-md-offset-1
        %h3.ouishare_stencil
          = t('dynamic_translations.main_schedule.title')
        %hr.pink
        %br
        %br
      .col-md-8.col-md-offset-2
        %p
          = t('dynamic_translations.program.text')
      .col-md-6.col-md-offset-3.btn-space
        %a{href: "/join#_getinvolved"}
          %button.btn.btn-large.btn-primary
            = t('dynamic_translations.get_involved.title')
    .row.centered
      .col-md-10.col-md-offset-1
        %h4.white
          = t('dynamic_translations.main_schedule.program_structure')
        / %hr.pink
        / %br
        %br
      .col-md-8.col-md-offset-2
        %p
          = t('dynamic_translations.program_structure.text_a')
        %p
          = t('dynamic_translations.program_structure.text_b')
        %p
          = t('dynamic_translations.program_structure.text_c')
    .row.centered
      .col-md-10.col-md-offset-1.col-sm-12
        .tickets-table.program-structure
          .row
            .col-md-12.title-inverse.purple
              %h4
                = t('dynamic_translations.program_structure.day_1')
              %h5
                18/05. 8.30 - 19.00

              %h6
                = t('dynamic_translations.program_structure.day_1_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.states_title')
              %p
                = t('dynamic_translations.program_structure.states_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.blockchain_title')
              %p
                = t('dynamic_translations.program_structure.blockchain_question')
          .row.start
            .col-md-12.title-inverse.purple
              %h4.purple
                = t('dynamic_translations.program_structure.day_2')
              %h5.purple
                19/05. 8.30 - 19.00

              %h6
                = t('dynamic_translations.program_structure.day_2_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.business_title')
              %p
                = t('dynamic_translations.program_structure.business_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.governance_title')
              %p
                = t('dynamic_translations.program_structure.governance_question')
          .row.start
            .col-md-12.title-inverse
              %h4.purple
                = t('dynamic_translations.program_structure.day_3')
              %h5.blue
                20/05. 13.00 - 21.00

              %h6.purple
                = t('dynamic_translations.program_structure.day_3_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.work_title')
              %p
                = t('dynamic_translations.program_structure.work_question')
            .col-sm-6.vert-borders
              %h5
                %span
                  = t('dynamic_translations.program_structure.education_title')
              %p
                = t('dynamic_translations.program_structure.education_question')
            .col-md-12
              %h5
                = t('dynamic_translations.love_party.title')
                20/05
                = t('dynamic_translations.love_party.time')
          .row.start
            .col-md-12.title
              %h4.white
                = t('dynamic_translations.program_structure.public_day')
              %h5
                21/05. 10.00 - 18.00
            .col-md-12
              %p



      / .row.centered#_schedule
      /   %br
      /   %br
      /   %img{:src => '/assets/2016-schedule-en.png', :alt => 'Main schedule', :style => "max-width: 100%"}
      /   / %a#sched-embed{:href => "http://ouisharefestparis2016.sched.org/grid/"}
      /   / %script{:type => "text/javascript", :src => "http://ouisharefestparis2016.sched.org/js/embed.js"}

