.blank_bg.vspace#news{:style => 'padding-top:120px;'}
  .container
    .row.centered
      %h3.ouishare_stencil
        = t('dynamic_translations.ouishare-news.title')
      %hr.pink
    .row{style:"padding-top: 3%"}

      - @magazines.each do |magazine|
        .col-md-4{style:"position: relative; min-height:170px;"}
          - if !magazine.content.split('img')[1].nil?
            .col-md-12
              %a{href: "#{magazine.url}", target:"blank"}
                %img{:src => "#{magazine.content.split(' ')[3].split('"')[1].gsub(/-150x150/, "")}", :u => "image"}
              .col-md-12
              %br
              %p
                %a{href: "#{magazine.url}", target:"blank"}
                  = magazine.name 
                %br
                  = "#{magazine.author}" unless magazine.author.blank?
          - else
            .col-md-12
              %a{href: "#{magazine.url}", target:"blank"}
                = image_tag "/assets/landing_logo.png", :style => "height:150px;"
            .col-md-12
              %br
              %p
                %a{href: "#{magazine.url}", target:"blank"}
                  = magazine.name
                %br
                  = "#{magazine.author}" unless magazine.author.blank?
            
    .row.centered.btn-space
      .col-md-12
        .col-md-6.col-md-offset-3
          %a{href: "http://magazine.ouishare.net/tag/ouisharefest/", :target => "_blank", :style => "width: 170px;"}
            %button.btn.btn-large.btn-primary
              = t('dynamic_translations.news.see_all')

