.triangle_bg#_tickets 
  .container.tickets-section 
    .row.centered
      %h3.ouishare_stencil
        = t('dynamic_translations.tickets.title')
      %br      
      %br
      .container.round_fond
        %h4{:style => "font-size:18px;"}
          %p
            = t('dynamic_translations.tickets.description1')
            %a{href: "#_getinvolved"} 
              = t('dynamic_translations.tickets.get_involved')
              = "."
          %p 
            = t('dynamic_translations.tickets.description2')
            %a{href: "http://bit.ly/OSFest14ticketapplication"} 
              = t('dynamic_translations.tickets.apply_tickets_link')
        %br
        %br
        .row.get-involved-options-choice
          .col-md-9.span-centered
            .row
              .col-md-5.pricing-table.turquoise.bordered.plain
                %a{href: home_freelancers_path}
                  %ul.centered.alt
                    %li.title
                      = t('dynamic_translations.tickets.freelancers_small_business')
                    %li.button
                      = t('dynamic_translations.tickets.freelancers_small_business_desc')
              .col-md-5.pricing-table.turquoise.bordered.plain.col-md-offset-2
                %a{href: home_entreprises_path}
                  %ul.centered.alt
                    %li.title
                      =t('dynamic_translations.tickets.entreprises')
                      %br
                    %li.button
                      = t('dynamic_translations.tickets.entreprises_desc')
                      %br
                      %br
.grey_bg#_getinvolved{:style => 'padding-top:30px'}
  .get-involved-section
    .container.sinfo
      .row.centered
        %h3.ouishare_stencil
          = t('dynamic_translations.get_involved.title')
        %hr
      .container
      %br  
      %p.text-center
        = t('dynamic_translations.get_involved.description')
      %br
        
      .row.get-involved-options-choice
        .col-md-9.span-centered
          .row
            .col-md-4.pricing-table.turquoise.bordered.plain
              %ul.centered.alt
                %li.title
                  = t('dynamic_translations.get_involved.call_for_proposal')
                %li.button
                  %a.btn.btn-large.button-call-to-action-option{href: "https://docs.google.com/forms/d/1dC9oMEus6c7MV0WCXmgN_c9UMZ4eLM9e02pxWw3NTKw/viewform"} 
                    =t('dynamic_translations.get_involved.submit')
                    %br
                    =t('dynamic_translations.get_involved.submit2')
            .col-md-4.pricing-table.turquoise.bordered.plain
              %ul.centered.alt
                %li.title
                  =t('dynamic_translations.get_involved.contribute')
                %li.button
                  %a.btn.btn-large.button-call-to-action-option{href: "#"}
                    = t('dynamic_translations.get_involved.contribute_button')
            .col-md-4.pricing-table.turquoise.bordered.plain
              %ul.centered.alt
                %li.title
                  =t('dynamic_translations.get_involved.idea_wall')
                %li.button
                  %a.btn.btn-large.button-call-to-action-option{href: "mailto:partners@ouishare.net", :target => "_blank"}
                    = t('dynamic_translations.get_involved.idea_wall_button')

