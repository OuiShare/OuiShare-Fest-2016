.container
  .row
    .col-xs-12.col-sm-6.col-md-6
      .well.well-sm
        .row
          .col-sm-6.col-md-4
            = image_tag @user.avatar.url(:small), :class => 'img-rounded.img-responsive'
            %br
            - if current_user && current_user.id == @user.id
              = link_to 'Edit my profile', me_edit_profile_path                        
          .col-sm-6.col-md-8
            %h4
              = @user.fullname
            %h5
              = t('member_since')
              = l(@user.created_at)
            %p
              %i.glyphicon.glyphicon-envelope
              = @user.email