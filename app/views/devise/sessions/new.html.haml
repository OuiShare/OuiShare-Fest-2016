-title "Login"
.container
  .row
    .col-md-4.col-md-offset-4
      %h1.text-center 
        = t('Login')
      %hr
      %h2.text-center 
        %small
          Please fill in your information
      %hr.invisible
      
      = form_tag new_user_session_path do
        .form-group.row.text-center
          = text_field_tag 'user[email]', '', :placeholder => 'Your Email', :class => 'form-control'
        .form-group.row.text-center
          = password_field_tag 'user[password]', '', :placeholder => 'Your password', :class => 'form-control'
        .form-group.row.text-center
          / .checkbox
          = check_box_tag 'user[remember_me]'
          = label_tag 'user[remember_me]', 'Remember me'
        .form-group.row.text-center
          = link_to "Forgotten password?", new_password_path(resource_name)
        .form-group.row.text-center
          %button.btn.btn-primary
            Sign in
        

          