          %ul.dropdown-menu
            %li
              %a{href: "about#_about"}
                = t('dynamic_translations.about.the_event')
            %li
              %a{href: "about#_about_highlights"}
                = t('dynamic_translations.highlight.title')
            %li
              %a{href: "about#_about_location"}
                = t('dynamic_translations.location.title')
            %li
              %a{href: "about#_about_press"}
                = t('dynamic_translations.press.title')
            %li
              %a{href: "about#_about_testimonials"}
                = t('dynamic_translations.testimonials.title')
        %li.dropdown
          %a.dropdown-toggle{href: "/participants"}
            =t('dynamic_translations.participants.title')
          %ul.dropdown-menu
            %li
              %a{href: "participants#_speakers"}
                = t('dynamic_translations.speakers.title')
            %li
              %a{href: "participants#_team"}
                = t('dynamic_translations.team.title')
            %li
              %a{href: "participants#_partners"}
                = t('dynamic_translations.partners.title')
            %li
              %a{href: "participants#_whoscomming"}
                = t('dynamic_translations.tickets.who_s_coming')
