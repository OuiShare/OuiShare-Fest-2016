.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} OUISHARE FEST 2014
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          %a{href: "#anc_about"} 
            =t('about')
        %li
          %a{href: "#anc_speakers"}
            =t('speakers')
        %li
          %a{href: "#anc_getinvolved"}
            =t('get_involved')
        %li
          %a{href: "#anc_tickets"}
            =t('tickets')
        %li
          %a{href: "#anc_partners"}
            =t('partners')
        %li
          %a{href: "#anc_team"}
            =t('team')
        %li
          %a{href: "http://blog.ouisharefest.com", target: "_blank"}
            =t('blog')
        %li
          = select_languages
        - if current_user          
          - if current_user.is_admin
            %li
              = link_to admin_index_path do
                %i.glyphicon.glyphicon-cog
          %li
            = link_to logout_path, :method => :delete do
              %i.glyphicon.glyphicon-remove
            

