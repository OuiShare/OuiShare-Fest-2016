.navbar.navbar-default.navbar-fixed-top
  .container.special-container-navbar
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} 
        = image_tag "/assets/logo_ouishare.png", :class => "header-logo"
        
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        / %li
        /   %a{href: "#_about"} 
        /     =t('dynamic_translations.about.title')

        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "/about"}
            =t('dynamic_translations.about.title')
            %b.caret
          %ul.dropdown-menu
            %li
              %a{href: "about#_about_about"}
                = t('dynamic_translations.about.the_event')
            %li
              %a{href: "about#_about_highlights"}
                = t('dynamic_translations.highlight.title')
            %li
              %a{href: "about#_about_location"}
                = t('dynamic_translations.footer.location')
            %li
              %a{href: "about#_about_press"}
                = t('dynamic_translations.press.press_coverage')
            %li
              %a{href: "about#_about_testimonials"}
                = t('dynamic_translations.testimonials.title')
        %li
          %a{href: "/#_speakers"}
            =t('dynamic_translations.speakers.title')
        %li
          %a{href: "/#_getinvolved"}
            =t('dynamic_translations.get_involved.title')
        %li
          .tickets-highlight
            %a{href: "/#_tickets", :class => 'highlight'}
              =t('dynamic_translations.tickets.title')
        %li
          %a{href: "/#_partners"}
            =t('dynamic_translations.partners.title')
        %li
          %a{href: "/#_team"}
            =t('dynamic_translations.team.title')
        %li
          %a{href: "http://blog.ouisharefest.com", target: "_blank"}
            =t('dynamic_translations.blog.title')
        %li
          .text-center.social-media-icons-header
            %a{href: "https://www.facebook.com/OuiShare", target: "_blank"}
              %img{src: "/assets/facebook.svg", width: "24px"}/        
            %a{href: "https://twitter.com/OuiShareFest", target: "_blank"}
              %img{src: "/assets/twitter.svg", width: "24px"}/ 
        
        %li
          = select_languages

