.ch-item{style: "background-image:url(" + track_leader.attachment.url(:custom) + ")"}
  .ch-info
    - if !track_leader.twitter_account.blank?
      %a{href: "http://www.twitter.com/" + track_leader.twitter_account, target: "_blank"}
        %h3
          = track_leader.function
    - else
      %h3
        = track_leader.fullname
    - if !track_leader.twitter_account.blank?
      %p
        %a{href: "http://www.twitter.com/" + track_leader.twitter_account, target: "_blank"}
          = "@" + track_leader.twitter_account
%h6
  %b
  = track_leader.fullname
  %br/
  - if !track_leader.description.blank?
    %small
      = track_leader.description
  -else
    %br
  / %br/
  / %br/
  / - if !track_leader.slug.blank?
  /   %small
  /     = t('individuals_biography.' + track_leader.slug)