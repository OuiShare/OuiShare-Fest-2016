.ch-item{style: "background-image:url(" + speaker.attachment.url(:custom) + ")"}
  .ch-info
    - if !speaker.twitter_account.blank?
      %a{href: "http://www.twitter.com/" + speaker.twitter_account, target: "_blank"}
        %h3
          = speaker.fullname
    - else
      %h3
        = speaker.fullname
    - if !speaker.twitter_account.blank?
      %p
        %a{href: "http://www.twitter.com/" + speaker.twitter_account, target: "_blank"}
          = "@" + speaker.twitter_account
%h6
  .white
    %b
      = speaker.fullname
  - if !speaker.company_name.blank?
    %small
      %a{href: speaker.url, target: "_blank"}
        = speaker.company_name
  - else
    %br
  