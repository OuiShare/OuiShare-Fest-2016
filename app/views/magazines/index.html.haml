#slider-container.text-center{:style => "min-height:100%;"}
	#slider1_container{:style => "position: relative; top: 0px; left: 0px; width: 1200px; height: 300px;"}
		/ Slides Container
		%div.scale-jssor{:style => "cursor: move; position: absolute; left: 0px; top: 0px; width: 1200px; height: 300px; overflow: hidden;", :u => "slides"}
			- @magazines.each do |f|
				%div
					%img{:src => "#{f.content.split(' ')[3].split('"')[1].gsub(/-150x150/, "")}", :u => "image"}
						%span.presentation.ouishare_stencil.white
							= f.name
						%span.btn.btn-blue{:style => "position:absolute; width: 100px; height: 50px; top: 70%; left: 40%;"}
							%a{href: "#{f.url}", target:"blank"}
								Read More

		.jssorb21{ :u => "navigator", :style => "position: absolute; bottom: -26px; left: 6px;"}
			%div{ :u => "prototype", :style => "position: absolute; width: 19px; height: 19px; text-align:center; line-height:19px; color:white; font-size:12px;"}

		%span.jssora13l{:style => "width: 40px; height: 50px; top: 123px; left: 30px;", :u => "arrowleft"}
		/ Arrow Right
		%span.jssora13r{:style => "width: 40px; height: 50px; top: 123px; right: 30px", :u => "arrowright"}



		